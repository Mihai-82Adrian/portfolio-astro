---
/**
 * Container Component
 *
 * Responsive container with max-width and padding.
 * Centers content and provides consistent spacing across the site.
 *
 * @component
 * @example
 * <Container>
 *   <h1>Page Content</h1>
 * </Container>
 */

interface Props {
  /** Max width constraint */
  maxWidth?: 'sm' | 'md' | 'lg' | 'xl' | 'full';
  /** Additional CSS classes */
  class?: string;
  /** Vertical padding */
  paddingY?: 'none' | 'sm' | 'md' | 'lg' | 'xl';
  /** Horizontal padding */
  paddingX?: 'none' | 'sm' | 'md' | 'lg';
}

const {
  maxWidth = 'xl',
  class: className = '',
  paddingY = 'none',
  paddingX = 'md',
} = Astro.props;

const maxWidthClasses = {
  sm: 'max-w-3xl',
  md: 'max-w-4xl',
  lg: 'max-w-5xl',
  xl: 'max-w-container',
  full: 'max-w-full',
};

const paddingYClasses = {
  none: '',
  sm: 'py-8',
  md: 'py-16',
  lg: 'py-24',
  xl: 'py-32',
};

const paddingXClasses = {
  none: '',
  sm: 'px-4',
  md: 'px-4 sm:px-6 lg:px-8',
  lg: 'px-6 sm:px-8 lg:px-12',
};
---

<div
  class:list={[
    'container',
    'mx-auto',
    maxWidthClasses[maxWidth],
    paddingYClasses[paddingY],
    paddingXClasses[paddingX],
    className,
  ]}
>
  <slot />
</div>

<style>
  .container {
    width: 100%;
  }
</style>
