---
interface Props {
  status: {
    label: string;
    indicator: 'active' | 'production' | 'live' | 'development' | 'research';
    progress?: number;
    detail?: string;
  };
  size?: 'sm' | 'md' | 'lg';
}

const { status, size = 'md' } = Astro.props;

const statusConfig = {
  active: {
    icon: 'ðŸŸ¢',
    color: '#4ADE80',
    bgColor: 'rgba(74, 222, 128, 0.1)',
    label: status.label,
  },
  production: {
    icon: 'ðŸš€',
    color: '#3B82F6',
    bgColor: 'rgba(59, 130, 246, 0.1)',
    label: status.label,
  },
  live: {
    icon: 'âœ…',
    color: '#10B981',
    bgColor: 'rgba(16, 185, 129, 0.1)',
    label: status.label,
  },
  development: {
    icon: 'ðŸš§',
    color: '#F59E0B',
    bgColor: 'rgba(245, 158, 11, 0.1)',
    label: status.label,
  },
  research: {
    icon: 'ðŸ”¬',
    color: '#A855F7',
    bgColor: 'rgba(168, 85, 247, 0.1)',
    label: status.label,
  },
};

const config = statusConfig[status.indicator];
---

<div class={`status-indicator status-${size}`} data-status={status.indicator}>
  <div class="status-content">
    <span class="status-icon" aria-hidden="true">{config.icon}</span>
    <span class="status-label">{config.label}</span>
  </div>
  
  {status.progress !== undefined && (
    <div class="progress-container">
      <div 
        class="progress-bar" 
        style={`width: ${status.progress}%; background: ${config.color};`}
        role="progressbar"
        aria-valuenow={status.progress}
        aria-valuemin={0}
        aria-valuemax={100}
        aria-label={`${status.label} progress: ${status.progress}%`}
      ></div>
    </div>
    <span class="progress-text">{status.progress}%</span>
  )}
  
  {status.detail && (
    <p class="status-detail">{status.detail}</p>
  )}
</div>

<style define:vars={{ 
  statusColor: config.color, 
  statusBg: config.bgColor 
}}>
  .status-indicator {
    display: inline-flex;
    flex-direction: column;
    gap: 0.5rem;
    border-radius: 0.5rem;
    background: var(--statusBg);
    border: 1px solid var(--statusColor);
    font-family: var(--font-body);
    transition: all 0.2s ease;
  }

  /* Size variants */
  .status-sm {
    padding: 0.25rem 0.5rem;
    font-size: 0.75rem;
  }

  .status-md {
    padding: 0.375rem 0.75rem;
    font-size: 0.875rem;
  }

  .status-lg {
    padding: 0.5rem 1rem;
    font-size: 1rem;
  }

  .status-indicator:hover {
    box-shadow: 0 0 12px var(--statusColor);
    transform: translateY(-2px);
  }

  .status-content {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .status-icon {
    font-size: 1em;
    line-height: 1;
  }

  .status-label {
    font-weight: 600;
    color: var(--statusColor);
    white-space: nowrap;
  }

  .progress-container {
    position: relative;
    width: 100%;
    height: 6px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 3px;
    overflow: hidden;
  }

  .progress-bar {
    height: 100%;
    border-radius: 3px;
    transition: width 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    animation: shimmer 2s infinite;
  }

  @keyframes shimmer {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.8; }
  }

  .progress-text {
    font-size: 0.75em;
    font-weight: 600;
    color: var(--statusColor);
    text-align: right;
  }

  .status-detail {
    font-size: 0.875em;
    color: var(--color-text-secondary);
    margin: 0;
    line-height: 1.4;
  }

  /* Dark mode support */
  @media (prefers-color-scheme: dark) {
    .status-indicator {
      background: rgba(0, 0, 0, 0.3);
    }
    
    .progress-container {
      background: rgba(255, 255, 255, 0.05);
    }
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .status-indicator {
      font-size: 0.9em;
    }
  }
</style>
