---
/**
 * About Page
 *
 * Personal background, current focus, hobbies, and professional interests
 * Includes information about photography, technology interests, and Profit Minds project
 */

import BaseLayout from '@/layouts/BaseLayout.astro';
import Container from '@components/ui/Container.astro';
import Card from '@components/ui/Card.astro';
import Badge from '@components/ui/Badge.astro';
import Button from '@components/ui/Button.astro';
import SkillsMatrix from '@components/sections/SkillsMatrix.astro';
import { translations } from '@data/translations';

const lang = 'ro';
const t = translations[lang];

const title = `${t.about.title} | Mihai Adrian Mateescu`;
const description = `${t.about.intro} - Finanzbuchhalter mit Interesse für Technologie, Fotografie und E-Commerce`;

const hobbies = [
  {
    title: 'Fotografie',
    description: 'Ich fotografiere leidenschaftlich gerne Landschaften, Porträts und städtische Szenen. Mit Adobe Photoshop bearbeite ich meine Aufnahmen, um einzigartige visuelle Darstellungen zu schaffen.',
    image: '/images/out1.webp'
  },
  {
    title: 'Technologie-Enthusiast',
    description: 'Als leidenschaftlicher Autodidakt erforsche ich neue Technologien durch persönliche Projekte und Online-Kurse. Ich lerne aktiv Programmiersprachen und experimentiere mit digitalen Tools, um meine Fähigkeiten kontinuierlich zu erweitern.',
    highlights: [
      'Self-Learning: Rust, Julia, Python durch Online-Kurse und Hobby-Projekte',
      'Testen neuer digitaler Tools für persönliche Finanzverwaltung',
      'Exploration von KI-Konzepten als Independent Researcher (Anfängerniveau)'
    ]
  },
  {
    title: 'E-Commerce: Profit Minds',
    description: 'Profit Minds ist meine eigene Marke für nachhaltige, personalisierte Kleidung und Accessoires. Dieses Projekt vereint meine Interessen an Design, E-Commerce und Marketing und ermöglicht mir, meine kreativen Ideen umzusetzen.',
    logo: '/images/profit-minds-logo.webp',
    link: 'https://profitminds.myspreadshop.de'
  }
];

// Real skills based on CV, experience, and honest self-assessment
const skillCategories = [
  {
    category: 'Finanz- und Lohnbuchhaltung (DE)',
    icon: 'finance',
    status: 'Advanced — 2+ Jahre Berufserfahrung',
    skills: [
      { name: 'Finanzbuchhaltung: Debitoren, Kreditoren, Sachkonten', proficiency: 'advanced' as const },
      { name: 'Lohnbuchhaltung & Gehaltsabrechnung', proficiency: 'advanced' as const },
      { name: 'Umsatzsteuervoranmeldungen (monatlich/vierteljährlich)', proficiency: 'advanced' as const },
      { name: 'Monats- und Jahresabschlüsse (BWA, GuV, Bilanz)', proficiency: 'advanced' as const },
      { name: 'DATEV, Agenda, Simba (Steuerkanzlei-Software)', proficiency: 'advanced' as const },
      { name: 'SelectLine, Modality, ELO DMS (aktuell)', proficiency: 'advanced' as const }
    ],
    note: 'Finanzbuchhalter seit 08/2023 (modal3, Kesen, Herrmann, Quadriga) • Bilanzbuchhalter (IHK) in Ausbildung, Prüfung 03/2026'
  },
  {
    category: 'E-Commerce Ops & Compliance (EU/DE)',
    icon: 'commerce',
    status: 'Advanced practitioner',
    skills: [
      { name: 'Shopify & Amazon Seller (EU)', proficiency: 'advanced' as const },
      { name: 'LUCID/VerpackG, DSGVO & Google Consent Mode v2', proficiency: 'advanced' as const },
      { name: 'WEEE/ElektroG, GTIN & GTIN-exemption', proficiency: 'intermediate' as const },
      { name: 'Printful/Spreadshirt/SPOD Logistik', proficiency: 'advanced' as const },
      { name: 'Google Merchant, Ads, Analytics', proficiency: 'advanced' as const }
    ]
  },
  {
    category: 'AI/ML Systems — Learning & Research',
    icon: 'brain',
    status: 'Learning / Research (non-expert)',
    skills: [
      { name: 'LLM/RAG Prototypen (Ollama, llama.cpp, Qdrant)', proficiency: 'intermediate' as const },
      { name: 'PyTorch / TensorFlow & scikit-learn', proficiency: 'intermediate' as const },
      { name: 'MLflow & Experiment Tracking', proficiency: 'intermediate' as const },
      { name: 'CPU-first Performance Tuning (BLAS/AOCL)', proficiency: 'intermediate' as const },
      { name: 'Semantisch gesteuerter Tokenizer (Projekt)', proficiency: 'intermediate' as const },
      { name: 'LLM from Scratch: Gemma 3 270M Rekonstruktion (Rust/Julia)', proficiency: 'intermediate' as const }
    ],
    note: 'Pair-programming: GPT-5 Thinking, Claude Code, Gemini Code Assist'
  },
  {
    category: 'Software & Web Development — Learning',
    icon: 'code',
    status: 'Learning (AI-assisted co-creation)',
    skills: [
      { name: 'React / Next.js 15, Tailwind, i18n', proficiency: 'intermediate' as const },
      { name: 'Flask / FastAPI; Rust (Axum) Basics', proficiency: 'intermediate' as const },
      { name: 'Apache Arrow/Parquet, Polars', proficiency: 'intermediate' as const },
      { name: 'Docker, GitHub Actions, Linux Basics', proficiency: 'intermediate' as const }
    ],
    note: 'Code generiert/debugged zusammen mit AI; Design + Architektur + Research von mir'
  },
  {
    category: 'Sprachen',
    icon: 'language',
    skills: [
      { name: 'Rumänisch (Muttersprache)', proficiency: 'expert' as const },
      { name: 'Deutsch (telc B2 Zertifikat)', proficiency: 'expert' as const },
      { name: 'Englisch (Sehr gut)', proficiency: 'advanced' as const }
    ]
  },
  {
    category: 'Soft Skills & Leadership',
    icon: 'team',
    skills: [
      { name: 'Kommunikation & Kundenbetreuung', proficiency: 'expert' as const },
      { name: 'Teamführung (bis zu 9 Mitarbeiter)', proficiency: 'advanced' as const },
      { name: 'Detailgenauigkeit & Qualitätskontrolle', proficiency: 'expert' as const },
      { name: 'Zeitmanagement & Priorisierung', proficiency: 'expert' as const },
      { name: 'Kaufmännische Leitung & BWL-Steuerung', proficiency: 'advanced' as const }
    ]
  }
];
---

<BaseLayout title={title} description={description} lang={lang}>
  <Container>
    <!-- Page Header -->
    <section class="py-12 md:py-16">
      <div class="text-center max-w-3xl mx-auto">
        <h1 class="text-4xl md:text-5xl font-bold text-text-primary-light dark:text-text-primary-dark mb-4">
          {t.about.title}
        </h1>
        <p class="text-xl text-text-secondary-light dark:text-text-secondary-dark">
          {t.about.subtitle}
        </p>
      </div>
    </section>

    <!-- Professional Identity -->
    <section class="py-12">
      <Card>
        <div class="flex flex-col md:flex-row gap-8 items-center">
          <div class="flex-shrink-0">
            <img
              src="/images/me.webp"
              alt="Mihai Adrian Mateescu"
              class="w-48 h-48 rounded-full object-contain shadow-lg bg-gray-100 dark:bg-gray-800"
              loading="eager"
              style="object-position: center;"
            />
          </div>
          <div class="flex-1">
            <h2 class="text-2xl md:text-3xl font-bold text-text-primary-light dark:text-text-primary-dark mb-4">
              {t.about.intro}
            </h2>
            <p class="text-text-secondary-light dark:text-text-secondary-dark mb-4 leading-relaxed">
              Engagierter Finanzbuchhalter mit Erfahrung in der Buchhaltung und Finanzverwaltung,
              spezialisiert auf die detaillierte Analyse von Geschäftsvorfällen und die steuerliche
              Berichterstattung. Mit einer ausgeprägten Leidenschaft für Zahlen und einem scharfen Auge
              für Details suche ich stets nach Möglichkeiten, meine beruflichen Fähigkeiten weiterzuentwickeln.
            </p>
            <div class="bg-eucalyptus-100 dark:bg-eucalyptus-900 p-4 rounded-lg">
              <p class="text-eucalyptus-900 dark:text-eucalyptus-100 font-medium">
                {t.about.currentFocus}
              </p>
            </div>
          </div>
        </div>
      </Card>
    </section>

    <!-- Skills Matrix -->
    <section class="py-12">
      <h2 class="text-3xl font-bold text-text-primary-light dark:text-text-primary-dark mb-8 text-center">
        Kompetenzen & Fähigkeiten
      </h2>
      <p class="text-center text-text-secondary-light dark:text-text-secondary-dark mb-8 max-w-3xl mx-auto">
        Ehrliche Selbsteinschätzung meiner beruflichen und technischen Fähigkeiten
      </p>
      <SkillsMatrix 
        categories={skillCategories}
        showProficiency={true}
      />

      {/* Proficiency Legend */}
      <div class="mt-8 p-6 bg-eucalyptus-50 dark:bg-eucalyptus-900/20 rounded-lg max-w-4xl mx-auto">
        <h3 class="font-semibold text-text-primary-light dark:text-text-primary-dark mb-3">
          Legende — Proficiency Levels
        </h3>
        <ul class="space-y-2 text-sm text-text-secondary-light dark:text-text-secondary-dark">
          <li class="flex items-center gap-3">
            <Badge variant="success" size="sm">Expert</Badge>
            <span>Produktive Nutzung, wiederholter Nachweis in mehreren Projekten</span>
          </li>
          <li class="flex items-center gap-3">
            <Badge variant="info" size="sm">Advanced</Badge>
            <span>Konstante Praxis, Autonomie bei typischen Aufgaben</span>
          </li>
          <li class="flex items-center gap-3">
            <Badge variant="warning" size="sm">Intermediate</Badge>
            <span>50–200h geführte Praxis, Grundkenntnisse gefestigt</span>
          </li>
          <li class="flex items-center gap-3">
            <span class="text-gray-600 dark:text-gray-400 italic">Learning / Research</span>
            <span>In Entwicklung — Konzept teilweise validiert, nicht produktiv</span>
          </li>
        </ul>
      </div>
    </section>

    <!-- Hobbies & Interests -->
    <section class="py-12">
      <h2 class="text-3xl font-bold text-text-primary-light dark:text-text-primary-dark mb-8">
        Hobbies & Interessen
      </h2>

      <div class="space-y-6">
        {hobbies.map((hobby) => (
          <Card>
            <div class="flex flex-col md:flex-row gap-6">
              {/* Image or Logo */}
              {(hobby.image || hobby.logo) && (
                <div class="flex-shrink-0">
                  {hobby.image && (
                    <img
                      src={hobby.image}
                      alt={hobby.title}
                      class="w-full md:w-64 h-48 object-cover rounded-lg"
                      loading="lazy"
                    />
                  )}
                  {hobby.logo && !hobby.image && (
                    <img
                      src={hobby.logo}
                      alt={hobby.title}
                      class="w-48 h-auto rounded-lg"
                      loading="lazy"
                    />
                  )}
                </div>
              )}

              {/* Content */}
              <div class="flex-1">
                <h3 class="text-2xl font-semibold text-eucalyptus-700 dark:text-eucalyptus-300 mb-3">
                  {hobby.title}
                </h3>
                <p class="text-text-secondary-light dark:text-text-secondary-dark mb-4">
                  {hobby.description}
                </p>

                {hobby.highlights && (
                  <ul class="space-y-2 text-text-secondary-light dark:text-text-secondary-dark">
                    {hobby.highlights.map((highlight) => (
                      <li class="flex items-start">
                        <span class="text-eucalyptus-600 dark:text-eucalyptus-400 mr-2">•</span>
                        <span>{highlight}</span>
                      </li>
                    ))}
                  </ul>
                )}

                {hobby.link && (
                  <div class="mt-4">
                    <Button href={hobby.link} variant="primary" target="_blank" rel="noopener noreferrer">
                      Besuche {hobby.title.includes('Profit Minds') ? 'Profit Minds' : hobby.title}
                    </Button>
                  </div>
                )}
              </div>
            </div>
          </Card>
        ))}
      </div>
    </section>

    <!-- Back to Home Link -->
    <div class="py-8 text-center">
      <a
        href="/"
        class="text-eucalyptus-600 dark:text-eucalyptus-400 hover:underline inline-flex items-center gap-2"
      >
        <span>←</span>
        <span>{t.common.backToHome}</span>
      </a>
    </div>
  </Container>
</BaseLayout>
