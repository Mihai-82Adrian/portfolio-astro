---
/**
 * Homepage - Mihai Adrian Mateescu Portfolio
 *
 * Main landing page with professional overview,
 * skills summary, and links to main sections
 */

import BaseLayout from '@/layouts/BaseLayout.astro';
import Hero from '@components/sections/Hero.astro';
import Container from '@components/ui/Container.astro';
import Card from '@components/ui/Card.astro';
import Button from '@components/ui/Button.astro';
import { translations } from '@data/translations';
import { generatePersonSchema, generateWebSiteSchema, generateMultipleSchemas } from '@utils/structuredData';

const lang = 'de';
const t = translations[lang];

const title = 'Mihai Adrian Mateescu - Finanzbuchhalter Portfolio';
const description = t.home.description;

// Generate structured data for homepage
const personSchema = generatePersonSchema(lang);
const websiteSchema = generateWebSiteSchema(lang);
const structuredData = [personSchema, websiteSchema];
---

<BaseLayout title={title} description={description} lang={lang} structuredData={structuredData}>
  <!-- Hero Section -->
  <Hero
    title={t.home.title}
    subtitle={t.home.subtitle}
    description={t.home.description}
    skillsLabel={t.home.skillsLabel}
    skills={t.home.heroSkills}
    imageSrc="/images/2025-2_50PM.webp"
    imageAlt="Mihai Adrian Mateescu"
  >
    <div class="flex flex-col sm:flex-row gap-4 justify-center mt-8">
      <Button href="/experience" variant="primary" size="lg">
        {t.nav.experience}
      </Button>
      <Button href="/blog" variant="secondary" size="lg">
        {t.nav.blog}
      </Button>
      <Button href="#contact" variant="outline" size="lg">
        {t.nav.contact}
      </Button>
    </div>
  </Hero>

  <!-- Contact Information -->
  <Container>
    <section id="contact" class="py-12">
      <Card>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div>
            <h2 class="text-2xl font-bold text-text-primary-light dark:text-text-primary-dark mb-6">
              {t.contact.address}
            </h2>
            <p class="text-text-secondary-light dark:text-text-secondary-dark">
              Bahnhofstraße 65b<br />
              21218 Seevetal<br />
              Germany
            </p>
          </div>

          <div>
            <h2 class="text-2xl font-bold text-text-primary-light dark:text-text-primary-dark mb-6">
              Kontakt
            </h2>
            <div class="space-y-3 text-text-secondary-light dark:text-text-secondary-dark">
              <p>
                <strong>{t.contact.phone}:</strong>{' '}
                <a href="tel:+491704740121" class="text-eucalyptus-800 dark:text-eucalyptus-200 underline decoration-eucalyptus-600/50 dark:decoration-eucalyptus-400/50 hover:decoration-eucalyptus-700 dark:hover:decoration-eucalyptus-300">
                  +49 170 474 0121
                </a>
              </p>
              <p>
                <strong>{t.contact.email}:</strong>{' '}
                <a href="mailto:mihai.mateescu@web.de" class="text-eucalyptus-800 dark:text-eucalyptus-200 underline decoration-eucalyptus-600/50 dark:decoration-eucalyptus-400/50 hover:decoration-eucalyptus-700 dark:hover:decoration-eucalyptus-300">
                  mihai.mateescu@web.de
                </a>
              </p>
              <p>
                <strong>{t.contact.linkedin}:</strong>{' '}
                <a
                  href="https://www.linkedin.com/in/mihai-adrian-mateescu"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-eucalyptus-800 dark:text-eucalyptus-200 underline decoration-eucalyptus-600/50 dark:decoration-eucalyptus-400/50 hover:decoration-eucalyptus-700 dark:hover:decoration-eucalyptus-300"
                >
                  Mateescu Mihai
                </a>
              </p>
            </div>
          </div>
        </div>
      </Card>
    </section>

    <!-- Quick Links to Main Sections -->
    <section class="py-12">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <Card>
          <h3 class="text-xl font-semibold text-eucalyptus-700 dark:text-eucalyptus-300 mb-3">
            {t.nav.education}
          </h3>
          <p class="text-text-secondary-light dark:text-text-secondary-dark mb-4">
            {t.home.quickLinks.education}
          </p>
          <Button href="/education" variant="ghost" size="sm">
            {t.common.learnMore} →
          </Button>
        </Card>

        <Card>
          <h3 class="text-xl font-semibold text-eucalyptus-700 dark:text-eucalyptus-300 mb-3">
            {t.nav.experience}
          </h3>
          <p class="text-text-secondary-light dark:text-text-secondary-dark mb-4">
            {t.home.quickLinks.experience}
          </p>
          <Button href="/experience" variant="ghost" size="sm">
            {t.common.learnMore} →
          </Button>
        </Card>

        <Card>
          <h3 class="text-xl font-semibold text-eucalyptus-700 dark:text-eucalyptus-300 mb-3">
            {t.nav.certifications}
          </h3>
          <p class="text-text-secondary-light dark:text-text-secondary-dark mb-4">
            {t.home.quickLinks.certifications}
          </p>
          <Button href="/certifications" variant="ghost" size="sm">
            {t.common.learnMore} →
          </Button>
        </Card>
      </div>
    </section>

    <!-- Skills Section -->
    <section class="py-12">
      <Card>
        <h2 class="text-3xl font-bold text-text-primary-light dark:text-text-primary-dark mb-6">
          {t.home.skills.title}
        </h2>
        <ul class="grid grid-cols-1 md:grid-cols-2 gap-4 text-text-secondary-light dark:text-text-secondary-dark">
          {t.home.skills.items.map((skill) => (
            <li class="flex items-start">
              <span class="text-eucalyptus-600 dark:text-eucalyptus-400 mr-2">✓</span>
              <span>{skill}</span>
            </li>
          ))}
        </ul>
      </Card>
    </section>

    <!-- Leadership Section -->
    <section class="py-12">
      <Card>
        <h2 class="text-3xl font-bold text-text-primary-light dark:text-text-primary-dark mb-6">
          {t.home.leadership.title}
        </h2>
        <ul class="space-y-3 text-text-secondary-light dark:text-text-secondary-dark">
          {t.home.leadership.items.map((item) => (
            <li class="flex items-start">
              <span class="text-eucalyptus-600 dark:text-eucalyptus-400 mr-2">•</span>
              <span>{item}</span>
            </li>
          ))}
        </ul>
      </Card>
    </section>

    <!-- Hobbies Teaser -->
    <section class="py-12 text-center">
      <Card>
        <h2 class="text-3xl font-bold text-text-primary-light dark:text-text-primary-dark mb-4">
          {t.home.hobbies.title}
        </h2>
        <p class="text-text-secondary-light dark:text-text-secondary-dark mb-6 max-w-2xl mx-auto">
          {t.home.quickLinks.hobbiesText}
        </p>
        <Button href="/about" variant="primary">
          {t.home.hobbies.learnMore}
        </Button>
      </Card>
    </section>
  </Container>
</BaseLayout>
